@model Application.DTOs.VisitDto

@{
    ViewData["Title"] = "Delete Visit";
}

<h1>Delete Visit</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Visit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerId
        </dd>
        <dt class="col-sm-2">
            Visitor
        </dt>
        <dd class="col-sm-10">
            @Model.VisitorId
        </dd>
        <dt class="col-sm-2">
            Visit Date
        </dt>
        <dd class="col-sm-10">
            @Model.VisitDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Purpose
        </dt>
        <dd class="col-sm-10">
            @Model.Purpose
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
@model Application.DTOs.VisitDto

@{
    ViewData["Title"] = "Visit Details";
}

<h1>Visit Details</h1>

<div>
    <h4>Visit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerId
        </dd>
        <dt class="col-sm-2">
            Visitor
        </dt>
        <dd class="col-sm-10">
            @Model.VisitorId
        </dd>
        <dt class="col-sm-2">
            Visit Date
        </dt>
        <dd class="col-sm-10">
            @Model.VisitDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Purpose
        </dt>
        <dd class="col-sm-10">
            @Model.Purpose
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>